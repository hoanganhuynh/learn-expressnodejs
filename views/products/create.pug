extends ../layouts/common

block content

    h1 Create Products

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/products/create", method="post")
        .form-group
            label(for="name") Name 
            input#name.form-control(name="name", type="text" value=values ? values.name : '')

        .form-group
            label(for="image") Image
            input#image.form-control(name="image", type="text" value=values ? values.image : '')

        .form-group
            label(for="description") Description
            input#description.form-control(name="description", type="text" value=values ? values.description : '')
            
            button.btn.btn-primary.mt-2 Create