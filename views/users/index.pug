extends ../layouts/common

block content
    h1
        span.mr-2 User
        a.btn.btn-success(href="/users/create") New

    .d-flex.align-items-center
        form.ml-auto(action="/users/search", method="GET", class="d-flex m-2")
            input(type="text", name="q", class="form-control m-2")
            button(class="btn btn-primary m-2") Search

    table.table
        tr
            th Name
            th Phone
            th Actions
        each user in users
            tr
                td= user.name
                td= user.phone
                td
                    a.btn.btn-light(href="/users/" + user.id) View